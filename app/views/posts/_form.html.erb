


<%= form_for @post, html: {multipart: true } do |f| %>

  <%= render 'shared/error_post_messages' %>

  <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: 'Choose a category' }) %><br>

  <%= f.label :title %><br>
  <%= f.text_field :title, placeholder: 'Type the post title here', class: 'form-control h3' %><br>

  <%= f.label :content %><br>
  <%= f.text_field :content, placeholder: 'Type the post text here', class: 'form-control h3' %><br>

  <%= f.label :image %><br>

  <div class="field">
    <label class="btn btn-default waves-effect waves-light">
      Upload main image <%= f.file_field :image %>
    </label>
  </div>

  <%= f.submit "Create Post", class: "btn btn-default btn-lg waves-effect waves-light"%>
<% end %>