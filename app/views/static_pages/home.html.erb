<% provide(:title, 'Home') %>



<div class="view home-bg jarallax " data-jarallax='{"speed": 0.2}' id="success">
  <div class="full-bg-img">
    <div class="container flex-center">

      <%= render :partial => 'shared/flash_messages', :flash => flash %>


      <script>
          $(function () { //ready
              toastr.info('If all three of these are referenced correctly, then this should toast should pop-up.');
          });
      </script>


      <div class="row pt-5 mt-3">
        <div class="col-md-12">
          <div class="text-center">
            <h1 class="h1-responsive introfont font-up font-bold mb-3 wow fadeInDown" data-wow-delay="0.3s">
              <strong>Roberts Enterprise</strong>
            </h1>
            <hr class="hr-light mt-4 wow fadeInDown" data-wow-delay="0.4s">

            <h5 class="font-up mb-5 introfont wow fadeInDown" data-wow-delay="0.4s">
              <strong>Three Rivers, Michigan</strong>
            </h5>

            <ul class="list-inline intro-social-buttons">
              <li class="inline-btn">
                <%= link_to campground_path, class: 'btn btn-default btn-lg' do  %>
                  <i class="fa fa-tree fa-fw"></i>
                  <span class="network-name">Campground</span>
                <% end %>
              </li>
              <li class="inline-btn">
                <%= link_to mobilehome_path, class: 'btn btn-default btn-lg' do  %>
                  <i class="fa fa-home fa-fw"></i>
                  <span class="network-name">Mobile Home Park</span>
                <% end %>
              </li>
              <li class="inline-btn">
                <%= link_to estatepark_path, class: 'btn btn-default btn-lg' do  %>
                  <i class="fa fa-globe fa-fw"></i>
                  <span class="network-name">Estate Park</span>
                <% end %>
              </li>

            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
