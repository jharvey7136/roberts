


<div class="blog-home container">

  <div class="row">

      <div class="col-md-8">

          <div class="row wow fadeIn" data-wow-delay="0.2s">
            <div class="col-md-12 mt-5">
              <h2 class="h1-responsive font-bold">
                Blog
              </h2>
            </div>
          </div>

        <ul class="list-inline intro-social-buttons">
          <li class="inline-btn">
            <%= link_to new_post_path, class: 'btn btn-default btn-lg' do  %>
              <i class="fa fa-tree fa-fw"></i>
              <span class="network-name">New Post</span>
            <% end %>
          </li>
          <li class="inline-btn">
            <%= link_to posts_path, class: 'btn btn-default btn-lg' do  %>
              <i class="fa fa-home fa-fw"></i>
              <span class="network-name">View Posts</span>
            <% end %>
          </li>


        </ul>

        <hr>


    </div>

</div>

</div>
