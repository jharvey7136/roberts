<% provide(:title, 'Photo Gallery') %>

<div class="album text-muted">

  <div class="container">

    <div class="row wow fadeIn " data-wow-delay="0.2s">
      <div class="col-md-12 mt-5">
        <h2 class="h1-responsive font-bold">
           Photo Gallery
        </h2>

        <hr>

        <ul class="list-inline intro-social-buttons">
          <li class="inline-btn">
            <%= link_to "Campground", campground_album_path, :class => 'btn btn-default' %>
          </li>
          <li class="inline-btn">
            <%= link_to "River Run", river_run_album_path, :class => 'btn btn-default' %>
          </li>
          <li class="inline-btn">
            <%= link_to "The Village", estate_park_album_path, :class => 'btn btn-default' %>
          </li>

          <% if logged_in? && current_user.admin?  %>
            <li class="inline-btn">
              <%= link_to "Add New Photo", new_album_url, :class => 'btn btn-default' %>
            </li>
          <% end %>
        </ul>

        <hr>

        <div class="row sortable sortable">
          <%= render partial: 'album_item', collection: @album_items %>
        </div>

        <hr>

      </div>

    </div>
  </div>
</div>




