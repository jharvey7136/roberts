

<div class="card">

  <%= link_to(image_tag(album_item.image_url(:medium).to_s, class: 'img-fluid post-image center-block'), album_item.image_url(:default).to_s, class: 'img-fluid post-image center-block',
              data: {lightbox: "albumphotos", title: album_item.title}) %>

  <p class="card-text">
    <span><%= link_to album_item.title, album_item %> </span>
    </p>


  <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit", edit_album_path(album_item.id) %>
    <%= link_to "Delete Photo", album_path(album_item), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>

</div>